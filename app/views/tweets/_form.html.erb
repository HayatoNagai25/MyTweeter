 <%= form_with model: @tweet do |form| %>
    <%= render "shared/form_errors", form: form %>
    
    <div class="mb-3">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control" %>
    </div>
    

    <%= button_to "Tweet", @tweet, method: :new, class: "btn btn-primary" %>
    <% if @tweet.persisted? %>
        <%= link_to "Delete", @tweet, data: {turbo_confirm: 'Are you sure?', "turbo-method": :delete}, class: "btn btn-outline-danger" %>
    <% end %>
<% end %>